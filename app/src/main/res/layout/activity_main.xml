<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carson.badgeview.sample.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:minHeight="50dp"
        android:layout_height="wrap_content">
        <com.carson.badgeview.BadgeView
            android:id="@+id/badge_view"
            android:background="@color/colorAccent"
            android:layout_width="200dp"
            app:badge_gravity="rightCenter"
            android:layout_height="50dp" />
        <com.carson.badgeview.BadgeImageView
            android:id="@+id/badge_imageview"
            app:badge_dragable="true"
            android:padding="7dp"
            android:src="@mipmap/avator"
            app:badge_gravity="rightBottom"
            app:badge_horizontalMargin="0dp"
            app:badge_verticalMargin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.carson.badgeview.sample.view.BadgeTextView
            android:id="@+id/badge_textview"
            app:badge_dragable="true"
            android:padding="7dp"
            app:badge_gravity="rightTop"
            app:badge_horizontalMargin="0dp"
            app:badge_verticalMargin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.carson.badgeview.sample.view.BadgeLinearLayout
            android:layout_width="match_parent"
            android:id="@+id/badge_linear"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="这里是测试文本"
                android:textSize="16sp"
                android:padding="5dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

        </com.carson.badgeview.sample.view.BadgeLinearLayout>

    </LinearLayout>



</FrameLayout>
